<div class="container">
  <%= simple_form_for(@bike) do |f|  %>

    <%= f.input :name, label: 'Bike model name: '  %>


    <%= f.fields_for :customizations do |c|  %>
      <div class="d-flex">
        <%= c.input :element %>
        <%= c.input :value  %>
      </div>

    <% end %>

    <%= f.submit  %>
  <% end %>
</div>
